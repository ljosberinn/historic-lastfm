  "author": {
    "name": "Gerrit Alex",
    "url": "https://github.com/ljosberinn"
  },
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@sentry/integrations": "6.16.1",
    "@sentry/node": "6.16.1",
    "@sentry/react": "6.16.1",
    "@sentry/webpack-plugin": "1.18.3",
    "dayjs": "1.10.7",
    "dotenv-webpack": "7.0.3",
    "next": "12.0.8",
    "npm-run-all": "4.1.5",
    "nprogress": "0.2.0",
    "react": "18.0.0-rc.0",
    "react-dom": "18.0.0-rc.0"
  },
  "devDependencies": {
    "@sentry/types": "6.16.1",
    "@types/node": "17.0.9",
    "@types/react": "17.0.38",
    "eslint": "8.7.0",
    "eslint-config-galex": "3.6.1",
    "husky": "7.0.4",
    "lint-staged": "12.1.7",
    "prettier": "2.5.1",
    "typescript": "4.5.4",
    "yarn-deduplicate": "3.1.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint:code": "eslint src && eslint pages",
    "lint:code:fix": "eslint src --fix && eslint pages --fix && prettier --write src && prettier --write pages",
    "lint:types": "tsc --noEmit",
    "install:clean": "rm -rf node_modules && rm yarn.lock && yarn",
    "postinstall": "yarn-deduplicate -l"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write",
    "*.js": "eslint --fix"
  }
}

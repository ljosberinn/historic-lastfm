{
  "name": "historic-lastfm",
  "license": "MIT",
  "author": {
    "name": "Gerrit Alex",
    "url": "https://github.com/ljosberinn"
  },
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@sentry/integrations": "6.4.1",
    "@sentry/node": "6.4.0",
    "@sentry/react": "6.4.0",
    "@sentry/webpack-plugin": "1.15.1",
    "dayjs": "1.10.4",
    "dotenv-webpack": "7.0.2",
    "next": "10.2.0",
    "npm-run-all": "4.1.5",
    "nprogress": "0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@sentry/types": "6.4.0",
    "@types/node": "15.3.0",
    "@types/react": "17.0.6",
    "eslint": "7.26.0",
    "eslint-config-galex": "2.15.10",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "prettier": "2.3.0",
    "typescript": "4.2.4",
    "yarn-deduplicate": "3.1.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint:code": "eslint src && eslint pages",
    "lint:code:fix": "eslint src --fix && eslint pages --fix && prettier --write src && prettier --write pages",
    "lint:types": "tsc --noEmit",
    "install:clean": "rm -rf node_modules && rm yarn.lock && yarn",
    "postinstall": "yarn-deduplicate -l"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write",
    "*.js": "eslint --fix"
  }
}

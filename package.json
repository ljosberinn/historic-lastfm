  },
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@sentry/integrations": "^5.27.3",
    "@sentry/node": "^5.27.3",
    "@sentry/react": "^5.27.3",
    "@sentry/webpack-plugin": "^1.13.0",
    "dayjs": "^1.9.4",
    "dotenv-webpack": "^3.0.0",
    "next": "10.0.1",
    "next-ga": "^2.3.4",
    "npm-run-all": "^4.1.5",
    "nprogress": "^0.2.0",
    "preact": "10.5.5",
    "preact-render-to-string": "5.1.11",
    "preact-ssr-prepass": "1.1.2"
  },
  "devDependencies": {
    "@sentry/types": "^5.22.3",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "eslint": "^7.12.1",
    "eslint-config-galex": "^2.6.3",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5",
    "yarn-deduplicate": "^3.1.0",
    "react": "16.14.0",
    "react-dom": "16.14.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint:code": "eslint src && eslint pages",
    "lint:code:fix": "eslint src --fix && eslint pages --fix && prettier --write src && prettier --write pages",
    "lint:types": "tsc --noEmit",
    "install:clean": "rm -rf node_modules && rm yarn.lock && yarn",
    "postinstall": "yarn-deduplicate -l"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write",
    "*.js": "eslint --fix"
  }
}
